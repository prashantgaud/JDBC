import java.util.ArrayList;
import java.util.Scanner;

public class ArrayListObjectExample
{
	
	private static ArrayList<Employee> addEmployee()
	{
		ArrayList<Employee> al = new ArrayList<>();
	
		Employee e1 = new Employee(1001,"nsnathan",50000);
		Employee e2 = new Employee(1002,"siju",70000);
		Employee e3 = new Employee(1003,"raj",60000);
		Employee e4 = new Employee(1004,"uma",40000);
		Employee e5 = new Employee(1005,"Indrani",90000);
		
		al.add(e1);
		al.add(e2);
		al.add(e3);
		al.add(e4);
		al.add(e5);
		return al;
		
	}
	
	public static void displayEmployee(ArrayList<Employee> al) {
		
		for(Employee e : al)
		{
			e.disp();
			
		}
	}
	
	
	public static void updateEmployee(ArrayList<Employee> al) 
	{
	
		Scanner sc = new Scanner(System.in);
		System.out.println("enter the employee no");
		int no = sc.nextInt();
		System.out.println("enter the sal to be updated");
		int esal = sc.nextInt();
				
		for(Employee e : al)
		{
			if(e.empno == no)
			{
				e.sal = e.sal+esal;
			}
			
		}
		
	}
	
	public static void main(String[] args) 
	{
	    		
		ArrayList<Employee> al	=addEmployee();
		displayEmployee(al);
		updateEmployee(al);	
		System.out.println("list after update");
		displayEmployee(al);
		
	}

	

	

	
	
}
